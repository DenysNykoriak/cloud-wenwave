resource "aws_lambda_function" "{{name}}" {
  function_name    = "${var.app_name}-{{name}}"
  filename         = "../server/dist/{{name}}.zip"
  source_code_hash = filebase64sha256("../server/dist/{{name}}.zip")
  handler          = "{{name}}.handler"
  runtime          = "nodejs18.x"
  role             = var.aws_iam_role_lambda_exec_arn
}

resource "aws_cloudwatch_log_group" "{{name}}_lambda_log_group" {
  name              = "/aws/lambda/${aws_lambda_function.{{name}}.function_name}"
  retention_in_days = 30

  depends_on = [aws_lambda_function.{{name}}]
}

output "{{name}}_lambda_arn" {
  value = aws_lambda_function.{{name}}.arn
}
